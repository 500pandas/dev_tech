  import math

def calculate_distance(x0, y0, x1, y1):
# Calculate the distance using the distance formula
distance = math.sqrt((x1 - x0) ** 2 + (y1 - y0) ** 2)
return distance

# Example coordinates
x0 = input('x0=')
y0 = input('y0=')
x1 = input('x1=')
y1 = input('y1=')
# Calculate the distance
distance = calculate_distance(float(x0), float(y0), float(x1), float(y1))
print(distance)

  def format_and_print(s):
# Check if the string is longer than 20 characters
if len(s) > 20:
s = s[:20] # Trim the string to the first 20 characters

# Format the string to be center aligned with a width of 20, filled with '='
formatted_string = s.center(20, '=')

return formatted_string


# Example input
example_input = input('input = ')
formatted_output = format_and_print(example_input)

print(formatted_output)
  
  
